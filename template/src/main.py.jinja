"""FastAPI application config"""

from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware

from api.middleware import CorrelationIdMiddleware, RateLimitMiddleware

from infra.handlers import graceful_shutdown_handler, app_exception_handler
from api.v1.routes import examples
from config.main import get_settings


def create_app(root_path: str = "", debug=False) -> FastAPI:
    """Create and configure FastAPI application."""

    settings = get_settings()

    # Create FastAPI app
    app = FastAPI(
        title=settings.app_name,
        version=settings.app_version,
        description="{{ project_description }}",
        debug=settings.debug,
        lifespan=graceful_shutdown_handler,
    )

    # Init exception handlers
    app.add_exception_handler(Exception, app_exception_handler)

    # Add CORS middleware
    app.add_middleware(
        CORSMiddleware,
        allow_origins=settings.cors.allowed_origins,
        allow_credentials=settings.cors.allow_credentials,
        allow_methods=settings.cors.allowed_methods,
        allow_headers=settings.cors.allowed_headers,
    )

    # Add custom middleware
    app.add_middleware(CorrelationIdMiddleware)
    app.add_middleware(RateLimitMiddleware)

    # Register routers
    app.include_router(examples.router, prefix=settings.api_base_url)

    # Health check endpoint
    @app.get("/status")
    async def health_check():
        """Health check endpoint."""
        return {"status": "healthy", "version": settings.app_version}

    return app


app = create_app()
